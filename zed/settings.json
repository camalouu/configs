{
  "show_edit_predictions": false,
  "inline_completions": {
    "disabled_globs": [
      ".env",
      "exercise01.rs"
    ]
  },
  "ssh_connections": [
    {
      "host": "box",
      "projects": [
        {
          "paths": [
            "~/challanges"
          ]
        },
        {
          "paths": [
            "~/scad2024_g117/ex1"
          ]
        }
      ]
    }
  ],
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-thinking-latest"
    },
    "version": "2"
  },
  "vim_mode": true,
  "ui_font_size": 18,
  "buffer_font_size": 21.0,
  "theme": {
    "mode": "system",
    "light": "Catbox",
    "dark": "Ayu Dark"
