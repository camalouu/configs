  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": true
  },
  "scrollbar": { "show": "never" },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "format_on_save": "off",
  "autosave": "off",
  "language_servers": ["!typescript-language-server", "!eslint", "..."],
  "terminal": {
    "option_as_meta": true
  }
}
