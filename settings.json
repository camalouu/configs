{
    "window.menuBarVisibility": "compact",
    "window.commandCenter": false,
    "window.zoomLevel": 1,

    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Noctis Obscuro",
    "workbench.layoutControl.enabled": false,
    "workbench.list.smoothScrolling": true,
    "workbench.panel.opensMaximized": "preserve",
    "workbench.activityBar.location": "hidden",
    "workbench.editor.showTabs": "none",
    "workbench.editor.enablePreview": false,

    "editor.fontSize": 15,
    "editor.minimap.enabled": false,
    "editor.fontFamily": "'Hack Nerd font', 'monospace', monospace",
    "editor.cursorSmoothCaretAnimation":"on",
    "editor.smoothScrolling": true,
    // "editor.lineNumbers":"",
    "editor.renderLineHighlight": "none",
    "editor.guides.indentation": false,
    "editor.stickyScroll.enabled": true,

    "security.workspace.trust.enabled": false,

    "files.autoSave": "afterDelay",
    
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.fontSize": 14.5,

    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,

    "git.autofetch": true,

    "zenMode.showTabs": "none",

    "vim.leader": "<space>",

    // "vim.easymotion": true,
    "vim.surround": true,
    // "vim.incsearch": true,
    "vim.useCtrlKeys": false,
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.foldfix": true,
    "vim.sneak": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.normal": ["#8FBCBB", "#000"],
    "vim.statusBarColors.insert": ["#BF616A", "#000"],
    "vim.statusBarColors.visual": ["#B48EAD", "#000"],
    "vim.statusBarColors.visualline": ["#B48EAD", "#000"],
    "vim.statusBarColors.visualblock": ["#A3BE8C", "#000"],
    "vim.statusBarColors.replace": "#D08770",
    "vim.statusBarColors.commandlineinprogress": "#007ACC",
    "vim.statusBarColors.searchinprogressmode": "#007ACC",
    "vim.statusBarColors.easymotionmode": "#007ACC",
    "vim.statusBarColors.easymotioninputmode": "#007ACC",
    "vim.statusBarColors.surroundinputmode": "#007ACC",
    "vim.handleKeys": { "<C-o>": true, "<C-i>": true, "<C-v>": true, "<C-d>":true, "<C-u>":true, "<C-e>": true, "<C-y>": true,},
    "workbench.colorCustomizations": {
        "statusBar.background": "#B48EAD",
        "statusBar.noFolderBackground": "#B48EAD",
        "statusBar.debuggingBackground": "#B48EAD",
        "statusBar.foreground": "#000",
        "statusBar.debuggingForeground": "#000"
    },
    "vim.normalModeKeyBindings": [
        { "before": [ "g", "p" ], "commands": ["editor.action.marker.next"]},
        { "before": [ "g", "l"], "after": ["end"] },
        { "before": [ "g", "h"], "after": ["home"] },
        { "before": [ "g", "k" ], "commands": ["editor.action.showHover"]},
        { "before": [ "g", "r" ], "commands": ["editor.action.goToReferences"]},
        { "before": [ "g", "c" ], "commands": ["editor.action.dirtydiff.next"]},
        { "before": [ "z", "f" ], "commands": ["editor.fold"]},
        { "before": [ "U" ], "after": ["<C-r>"] },
        { "before": [ "<leader>", "q" ], "commands": ["workbench.action.closeActiveEditor"]},
        // { "before": [ "<leader>", "p" ], "commands": ["workbench.action.quickOpen"]},
        { "before": [ "<leader>", "/" ], "commands": ["editor.action.commentLine"]},
        { "before": [ "<leader>", "f" ], "commands": ["editor.action.formatDocument"]},
        { "before": [ "<leader>", "e" ], "commands": ["workbench.view.explorer"]},
        { "before": [ "<leader>", "r" ], "commands": ["workbench.action.showAllEditorsByMostRecentlyUsed"]},
        { "before": [ "<leader>", "b" ], "commands": ["workbench.action.toggleActivityBarVisibility"]},
    ],
    "vim.visualModeKeyBindings": [
        { "before": [ "g", "l"], "after": ["end", "<Left>"] },
        { "before": [ "g", "h"], "after": ["home"] },
        { "before": [ "<leader>", "/" ], "commands": ["editor.action.blockComment"]}
    ],
    "vim.insertModeKeyBindings": [
        { "before": [ "j", "k" ], "after": [ "<Esc>" ] }
    ],

    "typescript.updateImportsOnFileMove.enabled": "always",
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "redhat.telemetry.enabled": false,
}
