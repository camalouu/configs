{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "vim_mode": true,
  "ui_font_size": 18,
  "buffer_font_size": 18,
  "theme": {
    "mode": "system",
    "light": "Catbox",
    "dark": "One Dark"
  },
  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": true
  },
  "scrollbar": { "show": "never" },
  "features": {
    "inline_completion_provider": "copilot"
  },
  "format_on_save": "off",
  "autosave": "off",
  "language_servers": ["!typescript-language-server", "!eslint", "..."],
  "terminal": {
    "option_as_meta": true
  }
}
