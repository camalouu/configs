{
  "vim_mode": true,
  "ui_font_size": 17,
  "buffer_font_size": 17,
  "theme": {
    "mode": "system",
    "light": "Catbox",
    "dark": "One Dark"
  },
  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": true
  },
  "scrollbar": { "show": "never" },
  "features": {
    "inline_completion_provider": "copilot"
  },
  "autosave": "on_focus_change"
}
